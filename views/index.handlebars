<div class="container">
    <div class="row">
        <div class="col-md-12 text-center">
            <img src="" alt="">
            <h1>Eat-Da-Burger !</h1>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="row">
                <div class="col-md-6">
                    {{#each burger_data}}
                        {{#unless this.devoured}}
                            <div class="col-md-9">
                                {{this.id}}{{this.burger_name}}
                            </div>
                            <div class="col-md-3">
                                <form class="devour-form">
                                    <input type="hidden" class="burger_id type="text> value={{this.is}}>
                                    <button type="submit" class="btn btn-default">Devour it!</button>
                                </form>
                            </div>
                        {{/unless}}
                    {{/each}}
                </div>
                <div class="col-md-6">
                    {{#each burger_data}}
                    {{if this.devoured}}
                        {{this.id}}{{this.burger_name}}
                    {{/if}}
                    {{/each}}
                </div>
            </div>
        </div>
    </div>
</div>
<div class="container">
    <div class="row">
        <div class="col-md-12">
            <form action="/burger/create" method ="POST">
                <input type="text" name="burger_name" id="entered_text">
                <button type="submit" class="btn btn-primary" id="text-entered">Submit</button>
            </form>
        </div>
    </div>
</div>