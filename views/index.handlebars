<div class="container">
    <div class="row">
        <div class="col-md-12 text-center">
            <img src="" alt="">
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="row">
                <div class="col-md-6">
                    {{#each burgers}}
                        {{#unless this.devoured}}
                            <div class="col-md-9">
                                {{this.id}}{{this.burger_name}}
                            </div>
                            <div class="col-md-3">
                                <form class="devour-form">
                                    <input type="hidden" class="burger_id type="text" value={{this.id}}>
                                    <button type="submit" class="btn btn-default">Devour it!</button>
                                </form>
                            </div>
                        {{/unless}}
                    {{/each}}
                </div>
                <div class="col-md-6">
                    {{#each burgers}}
                    {{#if this.devoured}}
                        <li>{{this.id}}{{this.burger_name}}</li>
                    {{/if}}
                    {{/each}}
                </div>
            </div>
        </div>
    </div>
</div>
<div class="container">
    <div class="row">
        <div class="col-md-12">
            <form action="/burger/create" method ="POST">
                <input type="text" name="burger_name" id="entered_text">
                <button type="submit" class="btn btn-primary" id="text-entered">Submit</button>
            </form>
        </div>
    </div>
</div>